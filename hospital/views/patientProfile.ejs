            <div class="patientImage">
                <% if (patient.profileImage) { %>
                    <img src="/uploads/<%= patient.profileImage %>" alt="Profile Image">
                <% } else { %>
                    <img src="../images/doc.jpg" alt="Profile Image">
                <% } %>
        
            </div>
            <button>Edit</button>
            <button>Logout</button>
            <button>Remove</button>
        </div>
        <div class="patientContent">
            <% patient.forEach(patient => { %>
                <p><strong>Name:</strong> <%= patient.name %></p>
                <p><strong>User Name:</strong> <%= patient.username %></p>
                <p><strong>Email:</strong> <%= patient.email %></p>
                <p><strong>Mobile Number:</strong> <%= patient.mobilenumber %></p>
                <p><strong>Date of Birth:</strong> <%= patient.dob %></p>
                <p><strong>Gender:</strong> <%= patient.gender %></p>
                <p><strong>State:</strong> <%= patient.State %></p>
                <p><strong>District:</strong> <%= patient.District %></p>
                <p><strong>City:</strong> <%= patient.City %></p>
                <p><strong>Pincode:</strong> <%= patient.Pincode %></p>
            <% }); %>
    
        </div>
    </div>
    












    <h1 class="heading1">Patient Profile</h1>
    
    <h1>Welcome, <%= patient.username %></h1>
    <% if (patient.profileImage) { %>
        <img src="/uploads/<%= patient.profileImage %>" alt="Profile Image" style="max-width: 150px; max-height: 150px;">
    <% } else { %>
        <p>No profile image uploaded.</p>
    <% } %>
    <!-- Display patient information -->
    <div>
        <p><strong>Name:</strong> <%= patient.name %></p>
        <p><strong>User Name:</strong> <%= patient.username %></p>
